ls -r   # reverse output
ls -R   # Recurse directories


# list only directories
ls -d */        # -d :  Directories are listed as plain files (not searched recursively).
ls -C | awk '{ print $2 }'      # -C    Force multi-column output; this is the default when output is to a terminal.
ls -d */ | sed 's|[/]||g'       # show directories without '/'
ls -d */ | cut -f1 -d'/'

tree -dfi       # -d     List directories only.
                # -f     Prints the full path prefix for each file.
                # -i     Makes tree not print the indentation lines, useful when used in conjunction with the -f option.

