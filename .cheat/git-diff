# diff on two specific commits
#   commit1 should be prior to commit2
git diff commit1..commit2

# use HEAD~
# HEAD~ vs HEAD^ :
# http://www.paulboxley.com/blog/2011/06/git-caret-and-tilde
# https://stackoverflow.com/questions/2221658/whats-the-difference-between-head-and-head-in-git#2222920
git diff HEAD HEAD~
git diff HEAD HEAD~2


# Compare a single file between two branches or commits:
git diff branch_1..branch_2 [--] path/to/file

# Only show diff file names between two commits
git diff --name-only commit1..commit2

