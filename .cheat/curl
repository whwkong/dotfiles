# list original curl cheat
cheat curl_orig

# send JSON data; requires header
# post requires -X POST -d '<data>'
curl -H "Content-Type: application/json" -X POST -d '{"data":"xyz"}' http://localhost:3000/api/

# multiple headers
curl -H 'key1: value1' -H 'key2: value2' http://localhost/api

# DELETE request
curl -X DELETE http://www.url.com/page

# Add post data
curl http://localhost:5000/todo2 -d "data=Change my brakepads"

# include protocol headers (eg status code) in output
curl -i http://localhost:5000/todo2 -d "data=Change my brakepads"

# prompt for user/passwd
curl -u <user> http://localhost:5000

    -k, --insecure      # Allow connections to SSL sites without certs (H)
curl -ku <user> <url>   # only use behind firewall!

# user ~/.netrc for user/passwd
curl --netrc http://example.com

# specify file for user/passwd
curl --netrc        # read .netrc for user name and password
curl --netrc-file FILE http://example.com  # specify FILE for netrc

# supply login/password
curl -u username http://example.com   # specify user name, prompt for passwd

curl -S 