# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

# order += "ipv6"
order += "disk /"
order += "wireless _first_"
# order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "cpu_usage"
order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        low_threshold = 20
}

cpu_usage {
    format = "cpu: %usage"
    # format = "all: %usage CPU_0: %cpu0 CPU_1: %cpu1"
    max_threshold = 75
    format_above_threshold = "Warning CPU above threshold: %usage"

}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "ðŸ’» %1min"
        format_above_threshold = "ðŸ’» Warning: %1min %5min %15min"
}

disk "/" {
        format = "%avail"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

